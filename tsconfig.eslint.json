{
  // extend your base config so you don't have to redefine your compilerOptions
  "extends": "./tsconfig.json",
  "include": [
    "src/**/*.ts",
    "__tests__/**/*.ts",
    "__tests__/**/*.d.ts",
    "playgrounds/vue3-ts/**/*.ts",
    "playgrounds/vue3-ts/**/*.d.ts",
    "playgrounds/angular/**/*.d.ts",
    "playgrounds/angular/**/*.ts",
    "playgrounds/vue3-ts/**/*.vue",
  ],
  "exclude": ["*.js", "scripts/*"],
}
